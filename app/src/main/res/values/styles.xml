<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/cardMarginTop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/cardPadding</item>
        <item name="android:paddingRight">@dimen/cardPadding</item>
        <item name="android:elevation">@dimen/cardElevation</item>
    </style>
</resources>
